@model User
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            <form action="/Register" method="post">

              <div class="row">
                

                  <div class="col-sm-6 form-outline">
                    <input asp-for="Name" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Name">Name</label>
                    <span asp-validation-for="Name"></span>
                  </div>
                  <div class="col-sm-6 form-outline">
                    <input asp-for="Description" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Description">About you!</label>
                    <span asp-validation-for="Description"></span>
                  </div>

              </div>

              <div class="row">
                    <div class="form-outline">
                    <input asp-for="Email" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                  </div>
              </div>
              <div class="row">
      
              </div>
                  <div class="row">
                    <div class="col-sm-6 form-outline">
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                  </div>
                  <div class="col-sm-6 form-outline">
                    <input asp-for="Confirm" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Confirm"></label>
                    <span asp-validation-for="Confirm"></span>
                  </div>
              </div>
              <div class="row">

              </div>

            
              <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>